<section class="section">
<h1 class="title">Listing Reservations</h1>

<table class="table is-stripped">
  <thead>
    <tr>
      <th>Reservation id</th>
      <th>Guest full name</th>
      <th>Phone</th>
      <th>Check in time</th>
      <th>Check out time</th>
      <th>Special requests</th>
      <th>Actions</th>


      <th></th>
    </tr>
  </thead>
  <tbody>
  <%= case length @reservations do %>
        <% 0 -> %>
        <h3 class= "title has-text-danger"> You have not made reservation yet, make one <%= link "List rooms", to: Routes.room_path(@conn, :index), class: "button is-link is-light" %> </h3>
        <% _ -> %>
    <%= for booking <- @reservations do %>
    <tr>
      <td><%= booking.id%></td>
      <td><%= booking.guest_full_name %></td>
      <td><%= booking.phone %></td>
      <td><%= booking.check_in %></td>
      <td><%= booking.check_out %></td>
      <td><%= booking.special_requests%></td>
      <td>
        <span><%= link "Show", to: Routes.user_booking_path(@conn, :show, booking), class: "has-text-success" %></span> |
        <span><%= link "Edit", to: Routes.user_booking_path(@conn, :edit, booking), class: "has-text-link" %></span>  |
        <span><%= link "Delete", to: Routes.user_booking_path(@conn, :delete, booking), class: "has-text-danger",  method: :delete, data: [confirm: "Are you sure?"] %></span> 
      </td>
    </tr>
    <% end %>
<% end %>

  </tbody>
</table>

